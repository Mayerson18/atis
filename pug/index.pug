mixin article(img,title,content)
  .column.center
    img(src=img,class="ours-img")
    h2.ours-title=title
    p.ours-content=content
    if block
      block
    else
      p No content provided
      
mixin as()
  each val in ["Home","About","Product and Services","Contact Us"]
    a.nav-item #{val}
    
mixin foot(x)
  each val in x
    .column
      img(src="img/foot#{val}.png")
doctype
html(lang="es_CO")
