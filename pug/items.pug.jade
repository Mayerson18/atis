- var item1 = {class:"fondo",title:"Assurance",content:p3}
- var item2 = {class:"fondo-v4",title:"Transparency",content:p3}
- var item3 = {class:"fondo",title:"Integrity",content:p3}
- var item4 = {class:"fondo-v4",title:"Service",content:p3}
- var items = [item1,item2,item3,item4]
mixin items(className,title,content)
  .item
    div(class="#{className}")
      .in-fondo
        h2 #{title}
        p #{content}
        
each val in items
  +items(val.class,val.title,val.content)
