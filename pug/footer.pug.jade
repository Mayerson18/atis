mixin foot(x)
  each val in x
    .column
      img(src="img/foot#{val}.png")
.pre-footer
footer.foot
  .columns
    .column.is-3
      h5.foot-title About Us
      p.foot-content #{pFooter}
    .column
      h5.foot-title Companies we Present  
      .columns
        +foot([1,2,3,4])
      .columns
        +foot([5,6,7,8])

            
